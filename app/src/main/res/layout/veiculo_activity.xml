<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Veiculo"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/modeloEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="Modelo" />

    <EditText
        android:id="@+id/placaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modeloEditText"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        android:hint="Placa" />
    <EditText
        android:id="@+id/renavamEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/placaEditText"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        android:hint="Renavam" />
    <EditText
        android:id="@+id/corEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/renavamEditText"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        android:hint="Cor" />
    <EditText
        android:id="@+id/clienteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/corEditText"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        android:hint="Cliente" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/salvarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/renavamEditText"
        android:layout_weight="1"
        android:backgroundTint="@color/ciano"
        android:layout_marginTop="16dp"
        android:text="Salvar" />

        <Button
            android:id="@+id/cancelarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/renavamEditText"
            android:layout_weight="1"
            android:backgroundTint="@color/ciano"
            android:layout_marginTop="16dp"
            android:text="Cancelar" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVincular"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Vincular Cliente"
            android:layout_marginStart="125dp"
            android:layout_marginTop="30dp"></Button>
    </LinearLayout>

</LinearLayout>
